@inproceedings{ WOS:000225402700021,
Author = {Hoover, EE and Hemstad, P and Larson, D and MacKenzie, J and Zambreno, K
   and Propsom, F},
Editor = {Reynolds, AG and Bowen, P},
Title = {Rootstock influence on scion vigor, hardiness, yield, and fruit
   composition of St. Pepin grape},
Booktitle = {VITICULTURE - LIVING WITH LIMITATIONS},
Series = {ACTA HORTICULTURAE},
Year = {2004},
Number = {640},
Pages = {201-206},
Note = {26th International Horticultural Congress, TORONTO, CANADA, AUG 11-17,
   2002},
Organization = {Canadian Soc Hort Sci; Int Soc Hort Sci; Univ Guelph},
Abstract = {Rootstocks for grapevines may contribute to scion vigor and winter
   hardiness, and may affect crop yield and composition. In an 8-year study
   of winegrape cultivar St. Pepin grafted onto five rootstocks ('St.
   Pepin', ES 15-53, MN 1065, MN Rip 64, C 3309), winter hardiness, vine
   vigor, yield, and fruit composition were measured. Weight of cane
   prunings, yield, and berry weight, cane periderm development, survival
   of buds in controlled freezing conditions, and fruit pH, titratable
   acidity and degrees Brix were measured. There were few significant
   differences in vine growth, yield and fruit composition among the
