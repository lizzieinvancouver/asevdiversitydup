@inproceedings{ WOS:000166400700019,
Author = {Deng, XX and Guo, WW and Yu, GH},
Editor = {Goren, R and Goldschmidt, EE},
Title = {Citrus somatic hybrids regenerated from protoplast electrofusion},
Booktitle = {PROCEEDINGS OF THE FIRST INTERNATIONAL SYMPOSIUM ON CITRUS BIOTECHNOLOGY},
Series = {ACTA HORTICULTURAE},
Year = {2000},
Number = {535},
Pages = {163-168},
Note = {1st International Symposium on Citrus Biotechnology, ELAT, ISRAEL, NOV
   29-DEC 03, 1998},
Organization = {Int Soc Hort Sci; Int Soc Citriculture},
Abstract = {Citrus genetic improvement through conventional methods is greatly
   hindered by nucellar polyembryony, pollen and/or ovule sterility, and
   wide incompatibility. Protoplast fusion is an alternative that can be
   used to circumvent these difficulties and efficiently transfer
   resistances to biotic and abiotic stress to commercial scion cultivars
   and rootstocks. More than 20 interspecific, intergeneric, and
   intertribal somatic hybrids have recently been obtained in our program
   by electrically induced fusion. The hybrids include those from elite
   scion cultivars such as Bonanza navel orange + Red blush grapefruit,
   Newhall navel orange + Eureka lemon. Newhall navel + Kuigan, Kinnow +
   Bendizao tangerine, and those from complementary rootstocks such as red
