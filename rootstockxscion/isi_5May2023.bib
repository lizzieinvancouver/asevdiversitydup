Title = {Development of Australian Rootstocks with Root-Knot Nematode Resistance
   and Low Potassium Transport},
Booktitle = {X INTERNATIONAL CONFERENCE ON GRAPEVINE BREEDING AND GENETICS},
Series = {Acta Horticulturae},
