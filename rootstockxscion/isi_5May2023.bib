@article{ WOS:000442777800002,
Author = {Kose, Bulent and Horuz, Ayhan and Akinoglu, Guney},
Title = {LEAF NUTRIENT STATUS OF `TRAKYA ILKEREN' GRAPE VARIETY (Vitis vinifera
   L.) IN DIFFERENT PHENOLOGICAL STAGES},
Journal = {ACTA SCIENTIARUM POLONORUM-HORTORUM CULTUS},
Year = {2018},
Volume = {17},
Number = {4},
Pages = {15-24},
Abstract = {Nutrition of grapevines is very sensitive issue in vineyards. Soil
   quality is very important matter for growth and quality in vine growing.
   Rootstocks affect the growth and productivity of grapevine as well as
   increase or decrease of the nutrient uptake. The present study was
   conducted to determine the phenological changes of nutrient uptakes in
   10 years Trakya tlkeren' grape variety (Vitis vinifera L.) in the heavy
   clay soil conditions. The grapevines are grown on 5BB and 5C rootstocks.
   The changes of macro and micronutrients in leaf blades from bud burst to
   post harvest period were investigated in the experiment. Leaf nutrient
   contents of leaf blades show varied depending on the phenological stages
   and rootstocks (P < 0.01 and P < 0.05). Nitrogen and phosphorus content
   of leaf blade was decreased until veraison stage for both rootstocks.
   The highest potassium (K) content was obtained at blooming stage. In
   blooming stage nitrogen (N), phosphorus (P), potassium (K) and magnesium
   (Mg) nutrients was found high on 5C rootstock whereas calcium (Ca) was
   high on 5BB. Grapevines were found insufficient for P, K and Mg
   nutrients in the study. Total chlorophyll and chlorophyll alb ratio
   showed significantly varied among to rootstocks and phenological stages
   (P < 0.01). While the highest leaf chlorophyll content was measured
   during flowering period it was found at the lowest through to harvest on
   both rootstocks. Overall total chlorophyll contents and chlorophyll alb
   ratio were significantly higher on 5BB grafted vines. In the research,
   5C was found to be more successful rootstock than 5BB for nutrient
   uptakes.},
DOI = {10.24326/asphc.2018.4.2},
ISSN = {1644-0692},
ResearcherID-Numbers = {HORUZ, Ayhan/A-7343-2018},
ORCID-Numbers = {HORUZ, Ayhan/0000-0002-8338-3208},
Unique-ID = {WOS:000442777800002},
