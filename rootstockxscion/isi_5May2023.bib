@article{ WOS:000346395100003,
Author = {Vilanova Miotto, Lidiane Carla and da Mota, Renata Vieira and de Souza,
   Claudia Rita and Cardozo Franca, Danilo Vieira and Novelli Dias,
   Frederico Alcantara and de Azevedo Pimentel, Rodrigo Meirelles and
