Journal = {JOURNAL OF PLANT PATHOLOGY},
Year = {2010},
Volume = {92},
Number = {1},
Pages = {195-203},
Month = {MAR},
Abstract = {Phenotypic and molecular diversity of 57 Phaeomoniella chlamydospora
