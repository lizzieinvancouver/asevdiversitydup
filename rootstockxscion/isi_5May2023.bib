@article{ WOS:000620261700005,
Author = {Yin, Yonggang and Jia, Nan and Li, Minmin and Liu, Changjiang and Yuan,
   Junwei and Han, Bin and Sun, Yan and Zhao, Shengjian and Guo, Zijuan},
Title = {Rootstocks induce shifts in tree vigor, yield and berry quality of
   `Summer Black' grapevines},
Journal = {EUROPEAN JOURNAL OF HORTICULTURAL SCIENCE},
Year = {2021},
Volume = {86},
Number = {1},
Pages = {41-48},
Month = {FEB},
Abstract = {The agronomic performances of grape (Vitis vinifera L.) cv. `Summer
   Black' vines on different resistant rootstocks including `101-14M',
   `11OR', `188-08', `5BB', `5C', `Beta' and `SO4' (with non-grafted vines
