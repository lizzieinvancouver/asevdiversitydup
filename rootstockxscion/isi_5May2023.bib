@article{ WOS:000632352900003,
Author = {Zhou-Tsang, A. and Wu, Y. and Henderson, S. W. and Walker, A. R. and
   Borneman, A. R. and Walker, R. R. and Gilliham, M.},
Title = {Grapevine salt tolerance},
