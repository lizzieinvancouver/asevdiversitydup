@inproceedings{ WOS:000243587100008,
Author = {Porro, D. and Stefanini, M. and Dorigatti, C. and Ramponi, M. and
   Voltolini, J. A.},
Editor = {Retamales, JB},
Title = {Ecophysiological response and nutritional status of grapevine in
