@article{ WOS:000375887700004,
Author = {Ibacache, Antonio and Albornoz, Francisco and Zurita-Silva, Andres},
Title = {Yield responses in Flame seedless, Thompson seedless and Red Globe table
   grape cultivars are differentially modified by rootstocks under semi
   arid conditions},
