@inproceedings{ WOS:A1994BH55B00052,
Author = {Avenant, JH},
Editor = {Rantz, JM},
Title = {The effect of hail netting on the performance of table grapes the summer
   rainfall regions of South Africa},
Booktitle = {TABLE GRAPE PRODUCTION, PROCEEDINGS OF THE INTERNATIONAL SYMPOSIUM},
Year = {1994},
Pages = {227-229},
Note = {International Symposium on Table Grape Production, ANAHEIM, CA, JUN
   28-29, 1994},
Organization = {Amer Soc Enol \& Viticulture},
Abstract = {In the summer rainfall regions of South Africa, the occurrence of hail
   often results in crop loss. To reduce this risk, table grape producers
   cover vineyards with black hail netting (20\% shading). To compensate
   for the resultant decrease in light and the possible decrease in
   fertility, more stringent control of leaf canopy density was envisaged.
   In this study, the effect of hail netting and the removal of all lateral
   shoots at pea-size were investigated on four Vitis vinifera L. scion
   cultivars grafted onto Jacquez rootstock (Vitis aestivalis Mich. X V.
   cinerea Engel X V. vinifera L.). The following parameters were
   evaluated: phenology, vegetative growth (viz. shoot growth rate,
   internode length, leaf area, and canopy density), canopy microclimate
   (viz. photosynthetic photo flow rate, and air temperature),
   physiological aspects (viz. photosynthetic rate, leaf water potential,
   and transpiration tempo), leaf composition (viz. micro- and macro
   elements, chlorophyll content), grape composition (viz. color intensity,
   sugar concentration and acid concentration), and reproductive growth
   (viz. budding percentage, crop load, and berry set). Results indicate
   that, although vegetative parameters were influenced by hail netting,
   leaf layer number was not affected. Budding percentage and bud fertility
   were adversely affected and berry set decreased. Grape composition
   significantly improved under hail netting, but a delay in harvest was
   induced. The removal of lateral shoots proved to be unsuccessful in
   neutralizing the effect of hail nets. Several negative effects were
   induced by this technique.},
ISBN = {0-9630711-1-4},
Unique-ID = {WOS:A1994BH55B00052},
}

@article{ WOS:A1994MW65700007,
Author = {WALKER, MA and WOLPERT, JA and WEBER, E},
Title = {FIELD SCREENING OF GRAPE ROOTSTOCK SELECTIONS FOR RESISTANCE TO FANLEAF
   DEGENERATION},
Journal = {PLANT DISEASE},
Year = {1994},
Volume = {78},
Number = {2},
Pages = {134-136},
Month = {FEB},
Abstract = {Fifty-five grape rootstock selections produced by L. A. Lider, nine
   Vitis vinifera X Muscadinia rotundifolia (VR) hybrids produced by H. P.
   Olmo (both of the University of California, Davis), and three fanleaf
   degeneration-susceptible grape rootstocks were planted in 1979 in a site
   in the Napa Valley, California, known to be infested with grapevine
   fanleaf virus (GFLV) and viruliferous Xiphinema index. All of these
   rootstock selections were field-budded with V. vinifera cv. Cabernet
   Sauvignon. The site was chosen because of the relatively uniform
   distribution of virus and vector. Shoot tips from the scions were first
   assessed for the presence of GFLV in 1981 with enzyme-linked
   immunosorbent assay (ELISA). Yearly ELISA assessments continued through
   1991. GFLV was detected in scions on all rootstocks, but not for 10 yr
   in scions on VR O39-16.},
