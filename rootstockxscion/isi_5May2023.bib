@article{ WOS:000276175100021,
Author = {Tello, M. L. and Gramaje, D. and Gomez, A. and Abad-Campos, P. and
   Armengol, J.},
Title = {ANALYSIS OF PHENOTYPIC AND MOLECULAR DIVERSITY OF PHAEOMONIELLA
