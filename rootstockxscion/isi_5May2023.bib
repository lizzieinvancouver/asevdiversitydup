@article{ WOS:000514236400028,
Author = {Zhou, Qi and Gao, Bo and Li, Wen-Fang and Mao, Juan and Yang, Shi-Jin
   and Li, Wei and Ma, Zong-Huan and Zhao, Xin and Chen, Bai-Hong},
Title = {Effects of exogenous growth regulators and bud picking on grafting of
   grapevine hard branches},
Journal = {SCIENTIA HORTICULTURAE},
Year = {2020},
Volume = {264},
Month = {APR 5},
Abstract = {The mechanized hard-branched grafted grape propagules always had the
   problem of early sprouting, late formation of graft union point callus
   and low rooting rate, which result in low survival rate. In this study,
   the annual hard-branch 5BB as rootstock and Cabernet Sauvignon as scion
   of grafted grape propagules were treated with water (as control), bud
   picking and different gradients of growth regulators, including rooting
   powder (ABT No. 2) and chlorpropham (CIPC) to adjust the growth
   competition between the germination of the scion and the callus
   formation of the graft union and to improve the survival rate of grafted
   grape propagules. This study lasted for two years (2017-2018). Results
   showed that 250 mg/L of ABT inhibited scion sprouting, promoted callus
   formation, rootstock rooting and had the highest survival rate with
   significant effect. However, CIPC inhibited the growth indexes of
   grafted grape propagules and reduced the survival rate. Bud picking
   delayed the germination time and increased the callus formation rate.
   Furthermore, ABT and CIPC could regulate sugar accumulation and the
   metabolic activities of related enzymes such as sucrose synthase (SS),
   sucrose phosphate synthase (SPS) and alpha-amylase (alpha-AMS) in the
   scion bud and the phloem near the graft union. Meanwhile, ABT and CIPC
   had a distribution regulating effect on auxin (IAA), gibberellic acid
   (GA3), zeatin riboside (ZR) and abscisic acid (ABA), whereas bud picking
   had no significant effect on the accumulation of sugar and endogenous
   hormones. Correlation analysis showed that sucrose, glucose, IAA and ZR
   near the graft union had a significant positive correlation with callus
   formation, starch and sucrose accumulation in the scion buds, whereas
   the accumulation of ABA in the phloem near the graft union negatively
   regulated the callus formation. This study demonstrated that ABT and
   CIPC affected the survival rate of grafted grape propagules by
   regulating the metabolism and distribution of sugar and endogenous
   hormones.},
DOI = {10.1016/j.scienta.2020.109186},
Article-Number = {109186},
ISSN = {0304-4238},
EISSN = {1879-1018},
Unique-ID = {WOS:000514236400028},
}

@article{ WOS:000541750900104,
Author = {Tedesco, Sara and Pina, Ana and Fevereiro, Pedro and Kragler, Friedrich},
Title = {A Phenotypic Search on Graft Compatibility in Grapevine},
Journal = {AGRONOMY-BASEL},
Year = {2020},
Volume = {10},
Number = {5},
Month = {MAY},
Abstract = {Grafting is the most used propagation method in viticulture and is the
   unique control strategy against Phylloxera. Nevertheless, its practice
   remains limited mainly due to inconsistent graft success and
   difficulties in predicting graft compatibility responses of proposed
   scion-rootstock combinations, slowing down the selection of elite
   rootstocks. Aiming to identify optimal phenotypic parameters related to
   graft (in)compatibility, we used four clones of two grapevine cultivars
   that show different compatibility behavior when grafted onto the same
   rootstock. Several physiological parameters, internal anatomy of the
   graft union, chlorophyll fluorescence, and pigment contents of homo- and
   heterografts were monitored in a nursery-grafting context. The
   measurements highlighted enhanced performance of the heterografts due to
   rooting difficulties of Vitis vinifera homografts. This suggests that in
   viticulture, homografts should only be used as compatibility controls
   regarding qualitative attributes. By observing the internal anatomy of
   the union, we found that grapevines might require longer times for graft
   healing than anticipated. While Affinity Coefficients were not
   informative to assess incompatibility, leaf chlorophyll concentration
   analysis proved to be a more sensitive indicator of stress than the
   analysis of chlorophyll fluorescence. Overall, we conclude that graft
   take correlated best with callus formation at the graft junction three
   weeks after grafting.},
