Title = {Influence of rootstocks on vine vigour, yield and quality of grapes},
Booktitle = {PROCEEDINGS OF THE VIITH INTERNATIONAL SYMPOSIUM ON TEMPERATE ZONE
   FRUITS IN THE TROPICS AND SUBTROPICS},
Series = {ACTA HORTICULTURAE},
Year = {2004},
Number = {662},
Pages = {259-263},
Note = {7th International Symposium on Temperate Zone Fruits in the Tropics and
