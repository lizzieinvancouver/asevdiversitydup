@article{ WOS:000360379000009,
Author = {de Castro Machado, Francisca Ligia and da Costa, Janaina de Paula and
   Teixeira, Adunias dos Santos and Correia da Costa, Jose Maria},
Title = {The influence of rootstock and time of harvest on the fruit quality
