@article{ WOS:000275805400008,
Author = {Komar, Veronique and Vigne, Emmanuelle and Demangeat, Gerard and
   Lemaire, Olivier and Fuchs, Marc},
Title = {Comparative Performance of Virus-Infected Vitis vinifera cv. Savagnin
   rose Grafted onto Three Rootstocks},
