@article{ WOS:000605645300005,
Author = {Hugalde, Ines P. and Aguero, Cecilia B. and Barrios-Masias, Felipe H.
   and Romero, Nina and Nguyen, Andy Viet and Riaz, Summaira and Piccoli,
   Patricia and McElrone, Andrew J. and Walker, M. Andrew and Vila, Hernan
   F.},
Title = {Modeling vegetative vigour in grapevine: unraveling underlying
   mechanisms},
Journal = {HELIYON},
Year = {2020},
Volume = {6},
Number = {12},
Month = {DEC},
Abstract = {Mechanistic modeling constitutes a powerful tool to unravel complex
   biological phenomena. This study describes the construction of a
   mechanistic, dynamic model for grapevine plant growth and canopy biomass
   (vigor). To parametrize and validate the model, the progeny from a cross
   of Ramsey (Vitis champinii) x Riparia Gloire (V. riparia) was evaluated.
   Plants with different vigor were grown in a greenhouse during the summer
   of 2014 and 2015. One set of plants was grafted with Cabernet Sauvignon.
   Shoot growth rate (b), leaf area (LA), dry biomass, whole plant and root
   specific hydraulic conductance (k(H) and L-pr), stomatal conductance
   (g(s)), and water potential (Psi) were measured. Partitioning indices
   and specific leaf area (SLA) were calculated. The model includes an
   empirical fit of a purported seasonal pattern of bioactive GAs based on
   published seasonal evolutionary levels and reference values. The model
   provided a good fit of the experimental data, with R 1/4 0.85.
   Simulation of single trait variations defined the individual effect of
   each variable on vigor determination. The model predicts, with
   acceptable accuracy, the vigor of a young plant through the measurement
   of L-pr and SLA. The model also permits further understanding of the
   functional traits that govern vigor, and, ultimately, could be
   considered useful for growers, breeders and those studying climate
   change.},
DOI = {10.1016/j.heliyon.2020.e05708},
Article-Number = {e05708},
EISSN = {2405-8440},
Unique-ID = {WOS:000605645300005},
}

