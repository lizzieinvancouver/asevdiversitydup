@inproceedings{ WOS:000431841200026,
Author = {Serra, I. and Strever, A. and Myburgh, P. and Schmeisser, M. and
   Deloire, P. A.},
Editor = {Pinto, M},
Title = {Grapevine (Vitis vinifera L. `Pinotage') leaf stomatal size and density
   as modulated by different rootstocks and scion water status},
Booktitle = {IX INTERNATIONAL SYMPOSIUM ON GRAPEVINE PHYSIOLOGY AND BIOTECHNOLOGY},
