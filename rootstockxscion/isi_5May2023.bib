@inproceedings{ WOS:000711212400070,
Author = {Cochetel, N. and Hevin, C. and Vivin, P. and Ollat, N. and Lauvergeat, V},
Editor = {Delrot, S and Ollat, N and Gallusci, P},
Title = {Grapevine rootstocks differentially regulate root growth and
   architecture in response to nitrogen availability},
Booktitle = {PROCEEDINGS OF THE XII INTERNATIONAL CONFERENCE ON GRAPEVINE BREEDING
   AND GENETICS},
