@article{ WOS:000395807500005,
Author = {Kumar, P. Suresh and Choudhary, V. K. and Kanwat, M. and Sangeetha, A.},
Title = {Evaluation of different rootstocks on the performance of some mandarin
   cultivars under mid hill conditions of Arunachal Pradesh},
Journal = {INDIAN JOURNAL OF HORTICULTURE},
Year = {2016},
Volume = {73},
Number = {4},
Pages = {489-495},
Month = {DEC},
Abstract = {Four rootstocks, viz., C.latipes, Volkamariana, Tanyum (C. medica) and
