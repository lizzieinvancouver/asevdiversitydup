}

@article{ WOS:000383294700041,
Author = {Suriano, Serafino and Alba, Vittorio and Di Gennaro, Domenico and
   Suriano, Maria Sonia and Savino, Michele and Tarricone, Luigi},
Title = {Genotype/rootstocks effect on the expression of anthocyanins and flavans
   in grapes and wines of Greco Nero n. (Vitis vinifera L.)},
Journal = {SCIENTIA HORTICULTURAE},
Year = {2016},
Volume = {209},
Pages = {309-315},
Month = {SEP 19},
Abstract = {In the present study the effect of different rootstocks, namely 775
   Paulsen, 779 Paulsen (Vitis berlandieri x Vitis rupestris), Rugged 225,
   420A and Kober 5BB (Vitis berlandieri x Vitis riparia) was evaluated on
   the anthocyanins and flavans profiles both in grapes and in relative
   wines obtained from Greco Nero n. vines grown in pots.
   Rootstocks effects on secondary metabolites such as anthocyanins and
   tannins were quite evident both on grapes and on wines. The highest
   levels of anthocyanins was observed in berries of vines grafted onto 775
   Paulsen and Kober 5BB. The corresponding wines presented greater color
   intensity, thus reflecting the anthocyanic content.
   On the base of Principal Component Analysis, no distinction based on
   genetic background was evident on the base of anthocyanic profile both
   on grapes and wines. Conversely, grapes grafted on rootstocks Vitis
   berlandieri x rupestris differentiated from rootstocks Vitis berlandieri
   x riparia on the base of flavans variables, even this distinction was
   lost after winemaking.
   The results of this paper suggested that a specific affinity between a
   certain genotype and a rootstock goes beyond the constitutive
   genetics-of the rootstock itself and becomes peculiar of each
   scion/rootstock combination. (C) 2016 Elsevier B.V. All rights reserved.},
